PKGNAME=evince
PKGSEC=gnome
PKGDEP="gtk-3 libgxps libspectre poppler djvulibre t1lib libsecret desktop-file-utils \
        dconf gsettings-desktop-schemas gnome-desktop"
PKGRECOM="gvfs p7zip tar unrar urw-fonts"
BUILDDEP="docbook-xsl gobject-introspection intltool itstool nautilus gtk-doc"
PKGDES="Document viewer for GNOME"

AUTOTOOLS_AFTER="--enable-pdf --enable-tiff --enable-djvu --enable-t1lib --enable-comics \
                 --disable-scrollkeeper --disable-schemas-compile --enable-introspection \
                 --disable-dvi --enable-gtk-doc --enable-nautilus"
ABSHADOW=no
ABRPMAUTOPROVONLY=yes
RECONF=no
